# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/docx_converter

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# File Storage Configuration (these are set in docker-compose for containerized deployment)
UPLOAD_DIR=/app/storage/uploads
OUTPUT_DIR=/app/storage/outputs
ARCHIVE_DIR=/app/storage/archives

# File Size Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_FILES_PER_JOB=1000